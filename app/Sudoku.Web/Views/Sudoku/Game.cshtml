@{
    ViewData["Title"] = "Sudoku";
}

<div class="container">
    <div class="row"> 
        <div class="col">
            <div id="gameConsole">
                <div class="row mb-3">
                    <label for="difficulty" class="col-sm-1 col-form-label col-form-label-sm">Difficulty</label>
                    <div class="col-sm-4">
                        <select id="difficulty" class="form-select form-select-sm">
                            <option value="32" selected>Easy</option>
                            <option value="28">Medium</option>
                            <option value="24">Hard</option>
                            <option value="20">Samurai</option>
                        </select>
                    </div>

                   <div class="col-sm-3 form-check form-switch">
                        <input id="switchUnique" class="form-check-input" type="checkbox">
                        <label class="form-check-label" for="switchUnique">Check Unique</label>
                   </div>

                    <div class="col-sm-4 form-check form-switch">
                        <input id="switchMistakes" class="form-check-input" type="checkbox" checked>
                        <label class="form-check-label" for="switchMistakes">Auto Check Mistakes</label>
                    </div>

                </div>
                     
                <div class="row mb-3">
                    <div class="col-12">
                        <button id="btnNewGame" type="button" class="btn btn-success col-sm-12">New Game</button>
                    </div>
                </div> 

                <div class="alert alert-success" role="alert">
                    For movement between cells you can use Arrow Keys
                </div>

                <div id="error" class="alert alert-danger" role="alert" style="display:none">
                </div>
            </div>
        </div>
        <div class="col">
             <div id="gameBoard"></div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/sudoku/game.js"></script>
}